package chapter_one;

public class L1_7 {
	public static void main(String[] args) {
		int myarray[];
		myarray = new int[10];
		myarray[0] = 0;
		myarray[1] = 1;
		myarray[2] = 2;
		myarray[9] = 9;
		System.out.println("Index\t\tValue");
		for(int i = 0;i < myarray.length;i++) {
			System.out.println(i+"\t\t"+myarray[i]);
		}
		System.out.print("Values:");
		for(int i:myarray)
				System.out.print(i+" ");
		System.out.print("\n");
	}
}
